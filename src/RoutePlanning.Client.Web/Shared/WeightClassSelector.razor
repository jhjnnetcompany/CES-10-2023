<div class="form-group row mb-3">
	<label for="formControlSelect" class="col-sm-2 col-form-label">@Label</label>
	<div class="col-sm-4">
		@if (WeightClasses == null)
		{
			<select class="form-control" disabled>
				<option>Loading...</option>
			</select>
		}
		else
		{
			<select class="form-control" id="formControlSelect" @onchange="OnSelectedChanged">
				<option disabled selected>Select a weight class</option>
				@foreach (var weightClass in WeightClasses)
				{
					<option value="@weightClass.WeightClassId.Value">@weightClass.Name</option>
				}
			</select>
		}
	</div>
</div>